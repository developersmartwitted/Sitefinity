                <script type="text/javascript">
                    jQuery(document).ready(function ($) {
                        var openModal = function (standard) {
                            tb_show('', '#TB_inline?width=900&amp;inlineId=login-modal', '');

                            if (true === standard) {
                                $('#TB_window').addClass('standard-login login-popup');
                                $('.office-login-errors').addClass('visually-hidden');
                                $('.office-login-welcome').removeClass('visually-hidden');
                            } else {
                                $('#TB_window').addClass('login-popup-has-errors login-popup');
                                $('.office-login-errors').removeClass('visually-hidden');
                                $('.office-login-welcome').addClass('visually-hidden');
                                $('.login-popup').height($('#wp-social-login-connect-options').height());
                            }

                            $('.login-popup').css({
                                'width': '100%',
                                'left': 0,
                                'margin-left': 0
                            }).css('margin-top', '');
                            $('#TB_ajaxContent').css({
                                'margin': '0 auto',
                                'max-width': '100%'
                            });
                        };

                        $('body').on('click', '[href=""], [href=""]',
                            function (evt) {
                                evt.preventDefault();
                                openModal(true);
                            });
                    });

                    $(".filter-parent").click(function (e) {
                        var a = $(".filter-parent >a > span");
                        if (a.hasClass("fa fa-plus")) {
                            a.removeClass("fa fa-plus");
                            a.addClass("fa fa-minus");
                        }
                        else {
                            a.removeClass("fa fa-minus");
                            a.addClass("fa fa-plus");
                        }

                    });

                </script>


                <script type="text/javascript">

                    $('#nav').on('click', '#nav > li > a', function (event) {
                        event.stopPropagation();
                        event.preventDefault();
                        var openMenu = $('#nav .active').next('ul');
                        if (event.handled !== true) {
                            openMenu.velocity("slideUp", 200, function () { });
                            if ($(this).hasClass('active')) {
                                $(this).removeClass('active');
                            } else {
                                $(this).next('ul').velocity("slideDown", 500, function () { });
                                $('#nav li a').removeClass('active');
                                $(this).addClass('active');
                            }
                            event.handled = true;
                        } else {
                            return false;
                        }
                    });
                </script>


